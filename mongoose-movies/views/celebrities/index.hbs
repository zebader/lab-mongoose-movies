<h2>Celebrities</h2>

{{#each allTheCelebritiesFromDB}}
    <p><a href="/celebrities/show/?_id={{this._id}}">{{this.name}}</a></p>

    <form action="/celebrities/{{this._id}}/delete" method="post">
     <button type="submit" class="delete-celebrity-button">Delete</button>
    </form>

    <form action="/celebrities/{{this._id}}/edit" method="get">
     <button type="submit">Edit</button>
    </form>

{{/each}}
    <a href="/celebrities/new" class="add-celebrity-button">Add a celebrity</a>